<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<name>BimServerJar</name>
	<description>Standalone runnable JAR for BIMserver evaluation without having to setup a full BIMserver</description>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>bimserverjar</artifactId>
	<packaging>jar</packaging>
	<parent>
		<groupId>org.opensourcebim</groupId>
		<artifactId>parent</artifactId>
		<version>1.5.20-SNAPSHOT</version>
	</parent>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<includes>
					<include>org/bimserver/starter/logo_small.png</include>
				</includes>
			</resource>
			<resource>
				<directory>..</directory>
				<includes>
					<include>pom.xml</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptor>assembly.xml</descriptor>
					<finalName>bimserverstarter-${pom.version}</finalName>
					<archive>
						<manifest>
							<mainClass>org.bimserver.starter.Starter</mainClass>
						</manifest>
						<manifestEntries>
							<Real-Main-Class>org.bimserver.JarBimServer</Real-Main-Class>
						</manifestEntries>
					</archive>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.opensourcebim</groupId>
			<artifactId>bimserver</artifactId>
			<version>1.5.20-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>